<h1>Burgers!</h1>

<h2>Burgers That I Ate:</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
       

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">IDIS TIME!</button>
        </form>

        {{!--{{> burger_name/devoured}}--}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers I Threw Away</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">EAT DAT!</button>
        </form>

        {{!--{{> burger_name/devoured}}--}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Was The Burger Dank?</label><br>
    <input type="radio" name="devoured" value="1" checked> Ate That!<br>
    <input type="radio" name="devoured" value="0"> Hell Nah!
  </div>

  <button type="submit">Add Burger</button>
</form>
